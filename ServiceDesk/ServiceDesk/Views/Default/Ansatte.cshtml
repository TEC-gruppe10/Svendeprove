<h2>Ansatte</h2>

<form action="/Ansatte" method="post">
    <table>
        <tr>
            <td>Fornavn</td>
            <td><input id="fornavn" name="Fornavn" type="text" value="@fornavn" /></td>
            <td>@error</td>
        </tr>
        <tr>
            <td>Efternavn</td>
            <td><input id="efternavn" name="Efternavn" type="text" value="@efternavn" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input id="password" name="Password" type="password" value="" /></td>
        </tr>
        <tr>
            <td>Gentast password</td>
            <td><input id="passwordCheck" name="PasswordCheck" type="password" value="" /></td>
        </tr>
        <tr>
            <td>Telefon</td>
            <td><input id="telefon" name="Telefon" type="number" value="@telefon" /></td>
        </tr>
        <tr>
            <td>Type: 1=admin, 0=medarbejder</td>
            <td><input id="type" name="Type" type="number" min="0" max="1" value="@type" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input id="email" name="Email" type="email" value="@email" /></td>
        </tr>
        <tr>
            <td><input type="submit" name="Create" value="create" /></td>
        </tr>
    </table>
</form>

<form action="/Ansatte" method="post">
    <table border="1px solid black" border-collapse="collapse" cellpadding="15px" width="100%">
        <thead>
            <tr>
                <td>ID</td>
                <td>Fornavn</td>
                <td>Efternavn</td>
                <td>Telefon</td>
                <td>Admin</td>
                <td>Email</td>
                <td>@person</td>
            </tr>
        </thead>
        <tbody>
            @{ int k = 0; int uID = 0;}
            @for (int i = 0; i < ViewBag.ansatte.Count; i++)
            {
                <tr>
                    @foreach (var x in ViewBag.ansatte[i])
                    {
                        if (k == 0)
                        {
                            <td id="@x">@x</td>
                            uID = Convert.ToInt32(x);
                            k++;
                        }
                        else {
                            <td>@x</td>
                        }
                    }
                    @{k = 0;}
                    <td><input type="submit" onclick=edituser()>@uID</td>
                </tr>
                        }
        </tbody>
    </table>
</form>